<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <title>Auth</title>
</head>

<body>
  {{ .message }}

  <script>
    (function () {
      try {
        window.close()
      } catch (e) { }

      // fallback if close is blocked
      setTimeout(function () {
        document.body.innerHTML = document.body.innerHTML + "<p>You can close this window.</p>"
      }, 200)
    })()
  </script>
</body>

</html>